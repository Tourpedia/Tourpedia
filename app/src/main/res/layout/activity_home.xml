<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    android:id="@+id/homeInterface"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:id="@+id/imageView"
            android:src="@drawable/appc"
            android:adjustViewBounds="false" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="77dp"
            android:id="@+id/imageView2"
            android:src="@drawable/logoc"
            android:layout_gravity="top|left|center_vertical"
            android:paddingBottom="6dp"
            android:layout_marginLeft="6dp" />

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/sub_header"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/settingsBtn"
            android:src="@drawable/settingsc"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_marginRight="120dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Home"
            android:id="@+id/textView"
            android:textColor="#3f9d9f"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/filterBtn"
            android:src="@drawable/filterc"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_marginLeft="120dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainFunctions"
        android:layout_gravity="center"
        android:layout_marginTop="70dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/part1_buttons">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/guideMe"
                android:clickable="true">

                <ImageButton
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:id="@+id/guideBtn"
                    android:src="@drawable/mapc"
                    android:scaleType="fitCenter"
                    android:background="#00000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Guide Me"
                    android:id="@+id/textView2"
                    android:textColor="#939393"
                    android:layout_marginLeft="25dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/identifyImage"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp">

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/identifyBtn"
                    android:src="@drawable/searchc"
                    android:scaleType="fitCenter"
                    android:background="#00000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Identify Image"
                    android:id="@+id/textView3"
                    android:textColor="#939393" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/makePlan">

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/planBtn"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/plansc"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:layout_marginTop="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Make a Plan"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:textColor="#939393" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
