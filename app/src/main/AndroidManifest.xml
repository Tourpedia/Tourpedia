<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ebtes_000.tourpedia"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Network State Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Access Location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Bluetooth Permissions -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <permission
        android:name="android.permission.BLUETOOTH"
        android:label="BLUETOOTH" />
    <permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- Camera Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <!-- Storage Permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"> <!-- the second  line that solve the memory problem -->


        <!-- <uses-library android:name="com.google.android.maps" /> -->
        <activity
            android:name=".home"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".settings"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity
            android:name=".addPlan"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity
            android:name=".attractionDescription"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity
            android:name=".attractionsList"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity
            android:name=".CameraActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity
            android:name=".guideMe"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity
            android:name=".filter"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity
            android:name=".imgDescription"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity
            android:name=".plans"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity
            android:name=".GlassActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity android:name=".PlanDetails"
            android:launchMode="singleTask"/>
    </application>

</manifest>
